<h1>Create an account</h1>
<p>It's free and always will be.</p>
<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <h3>Please check the fields.</h3>
  <% end %>
  <div class="form-row">
    <div class="form-group col-md-6">
      <%= f.text_field :first_name, placeholder: "First name", class: "form-control" %>
    </div>
    <div class="form-group col-md-6">
      <%= f.text_field :surname, placeholder:  "Surname", class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.email_field    :email, placeholder: "Email address", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.password_field :password, placeholder: "New password", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :birthday %>
    <%= f.date_field :birthday, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :gender_id %><br>
    <% (User::GENDERS).each_with_index do |gender, gender_index| %>
      <%= f.radio_button :gender_id, gender_index %><%= gender %>
    <% end %>
  </div>
  <p><small>By clicking Sign Up, you agree to our Terms, Data Policy and Cookie Policy. You may receive SMS notifications from us and can opt out at any time.</small></p>
  <%= f.submit "Sign Up", class: "btn btn-lg btn-success px-5 py-1" %>
<% end %>